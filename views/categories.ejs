<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categories</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav>
      <a href="/" class="nav-left"
        ><img src="/images/lab.svg" alt="Home" class="large-icon"
      /></a>
      <h1>
        <img
          src="/images/category.svg"
          alt="Categories"
          class="large-icon"
        />Categories
      </h1>
      <a href="/categories/new" class="nav-right"
        ><img
          src="/images/add.svg"
          alt="New Category"
          class="large-icon nav-right"
      /></a>
    </nav>

    <ul>
      <% categories.forEach(category => { %>
      <li class="item">
        <a href="/categories/<%= category.id %>"><%= category.name %></a>
        <form
          action="/categories/<%= category.id %>?_method=DELETE"
          method="POST"
          style="display: inline"
        >
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this category?')"
          >
            <img src="/images/delete.svg" alt="Delete" class="small-icon" />
          </button>
        </form>
      </li>
      <% }) %>
    </ul>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Items</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav>
      <a href="/" class="nav-left"
        ><img src="/images/lab.svg" alt="Home" class="large-icon"
      /></a>
      <h1>
        <img src="/images/box.svg" alt="Item" class="large-icon" />Inventory
        Items
      </h1>
      <a href="/items/new" class="nav-right"
        ><img src="/images/add.svg" alt="Add Item" class="large-icon nav-right"
      /></a>
    </nav>
    <ul>
      <% items.forEach(item => { %>
      <li class="item">
        <a class="item-name" href="/items/<%= item.id %>"><%= item.name %></a>
        <strong class="item-data">Quantity: <%= item.quantity %></strong>
        <form
          action="/items/<%= item.id %>?_method=DELETE"
          method="POST"
          style="display: inline"
          onsubmit="return confirm('Are you sure you want to delete this item?');"
          class="item-option"
        >
          <button type="submit">
            <img src="/images/delete.svg" alt="Delete" class="small-icon" />
          </button>
        </form>
      </li>
      <% }); %>
    </ul>
    <a href="/items/new">Add New Item</a>
  </body>
</html>
